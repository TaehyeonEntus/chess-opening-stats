{
    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Next.js dev",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "started server on .+, url: (http://.+)",
                "uriFormat": "%s"
            }
        }
    ]
}